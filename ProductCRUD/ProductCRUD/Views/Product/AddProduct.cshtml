@model Product

<h1 style="color:red;">Add Product</h1>

<form method="post" asp-action="CommitProduct" asp-controller="Product">
    <div class="form-group">
        <label for="productName" style="font-size:25px;">Product Name: </label>
        <input type="text" name="Name" id="productName" class="form-control" style="font-size:25px;" />
    </div>

    <div class="form-group">
        <label for="productPrice" style="font-size:25px;">Product Price:</label>
        <input type="number" name="Price" id="productPrice" class="form-control" style="font-size:25px;" />
    </div>

    <br/>
    
    <button type="submit" class="btn btn-primary" style="font-size:25px;">Add Product</button>
</form>