@model Product

<h1 style="color:red;">Edit Product</h1>

<form asp-controller="Product" asp-action="UpdateProduct" method="post" style="font-size:30px;">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" style="font-size:30px;"/>
    </div>
    
    <div class="form-group">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" style="font-size:30px;"/>
    </div>

    <hr/>

    <button type="submit" class="btn btn-primary" style="font-size:30px;">Save Changes</button>
</form>