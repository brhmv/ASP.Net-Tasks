<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Product"] - ProductCRUD</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ProductCRUD.styles.css" asp-append-version="true" />
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
              
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between " style="font-size:30px;">
                    <ul class="navbar-nav flex-grow-1" style="font-weight:600;">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Product" asp-action="GetProducts">Products</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Product" asp-action="AddProduct">Add Product</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Product" asp-action="GetProductViaName">Get Product</a>
                        </li>

                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - ProductCRUD - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>