@model ProductCrudEF.Models.ViewModels.AddProductViewModel

<h1 style="color:red;">Add Product</h1>

<form method="post" asp-action="CommitProduct" asp-controller="Product" enctype="multipart/form-data">

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label for="productName" style="font-size:25px;">Name: </label>
        <input type="text" asp-for="Name" class="form-control" style="font-size:25px;" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Description" style="font-size:25px;">Description:</label>
        <input type="text" asp-for="Description" class="form-control" style="font-size:25px;" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="productPrice" style="font-size:25px;">Price:</label>
        <input type="number" asp-for="Price" class="form-control" style="font-size:25px;" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="productCategory" style="font-size:25px;">Category:</label>
        <select asp-for="CategoryId" asp-items="@(new SelectList(ViewBag.Categories as List<Category>, "Id", "Name"))">
            <option value="" style="font-size:20px;">Select a category</option>
        </select>
        <span asp-validation-for="CategoryId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="productImage" style="font-size:25px;">Image:</label>
        <input type="file" asp-for="ImageFile" class="form-control" style="font-size:25px;" />
        <span asp-validation-for="ImageFile" class="text-danger"></span>
    </div>

    <br />

    <button type="submit" class="btn btn-primary" style="font-size:25px;">Add Product</button>
</form>
