@model Product

<h1 style="color:red;">Edit Product</h1>

<form asp-controller="Product" asp-action="UpdateProduct" method="post" style="font-size:30px;">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Name" style="font-size:25px;">Name:</label>
        <input asp-for="Name" class="form-control" style="font-size:25px;" />
    </div>

    <div class="form-group">
        <label asp-for="Price" style="font-size:25px;">Price:</label>
        <input asp-for="Price" class="form-control" style="font-size:25px;" />
    </div>

    <div class="form-group">
        <label asp-for="Description" style="font-size:25px;">Description:</label>
        <input asp-for="Description" class="form-control" style="font-size:25px;" />
    </div>

    <div class="form-group">
        <label asp-for="CategoryId" style="font-size:25px;">Category:</label>
        <select asp-for="CategoryId" asp-items="@(new SelectList(ViewBag.Categories ?? new List<Category>(), "Id", "Name"))" class="form-control" style="font-size:25px;">
            <option value="" style="font-size:20px;">Select a category</option>
        </select>
    </div>

    <hr />

    <button type="submit" class="btn btn-primary" style="font-size:25px;">Save Changes</button>
</form>